<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>施設情報入力用</h1>
      <form class="card-body">
      <div class="form-control">
        <label class="label" for="facility_name">
          <span class="label-text">施設名</span>
        </label>
        <input type="text" id="facility_name" name="facility_name" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="post_code">
          <span class="label-text">郵便番号</span>
        </label>
        <input type="text" id="post_code" name="post_code" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="address">
          <span class="label-text">住所</span>
        </label>
        <input type="text" id="address" name="address" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="phone_number">
          <span class="label-text">電話番号</span>
        </label>
        <input type="tel" id="phone_number" name="phone_number" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="web_site">
          <span class="label-text">Webサイト</span>
        </label>
        <input type="url" id="web_site" name="web_site" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="latitude">
          <span class="label-text">緯度</span>
        </label>
        <input type="number" id="latitude" name="latitude" step="0.000001" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="longitude">
          <span class="label-text">経度</span>
        </label>
        <input type="number" id="longitude" name="longitude" step="0.000001" class="input input-bordered" required />
      </div>
    
      <div class="form-control">
        <label class="label" for="opening_hours">
          <span class="label-text">営業時間</span>
        </label>
        <input type="text" id="opening_hours" name="opening_hours" class="input input-bordered" required />
      </div>

      <div class="form-control mt-6">
        <button class="btn btn-primary">送信</button>
      </div>
    </form>
  </div>
</div>